FROM python:3.10-slim

RUN apt-get install -y --no-install-recommends \
    build-essential \       # Para instalar wheels que requieran compilación
    libgl1 \                 # Para OpenCV
    libglib2.0-0 \           # Para OpenCV (gthread)
    ca-certificates \        # Para conexiones HTTPS seguras
    libstdc++6 \             # Para compatibilidad con C++ (necesario para muchas wheels)
    libopenblas-dev \        # Para numpy / operaciones matriciales eficientes
    libgomp1 \               # Runtime OpenMP (paralelización de transformers y numpy)
    git                      # Algunas dependencias de transformers se instalan desde repositorios

WORKDIR /app
COPY . /app

# Instalar dependencias
RUN pip install --no-cache-dir -r requirements.txt

# Descargar recursos NLTK
RUN python -m nltk.downloader punkt averaged_perceptron_tagger punkt_tab averaged_perceptron_tagger_eng

# Descargar modelo spaCy
RUN python -m spacy download en_core_web_sm


# Comando final: ejecutar handler serverless
CMD ["python", "serverless_logic.py"]
